<section id="submit">
<h2>PRODUCT DETAILS</h2>

<form class="" action="/submit" method="post" role="form" enctype="multipart/form-data">
  <div class="form-group">
  <label for="exampleFormControlFile1">Upload product image *</label>
  <input type="file" class="form-control-file"  name="file" required>
  </div>
  <div class="form-group">
  <label for="Gadget">Gadget *</label>
  <input type="text" class="form-control"  name="gadget" list="gadgets" required>
  <datalist id="gadgets">
    <option>Laptop</option>
    <option>Smartphone</option>
    <option>Headphone</option>
    <option>Speaker</option>
    <option>Camera</option>
    <option>Desktop</option>
  </datalist>
  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone.</small>
  </div>

  <div class="form-group">
  <label for="brand">Brand *</label>
  <input type="text" class="form-control" name="brand" required >
  </div>
  <div class="form-group">
  <label for="username">Your name *</label>
  <input type="text" class="form-control" name="username" required >
  </div>

<div class="form-group">
<label for="how old">How old *</label>
<input type="text" class="form-control"  name="old" required>
</div>
<div class="form-group">
<label for="price">Expected Price *</label>
<input type="text" class="form-control"  name="price" required>
</div>
<div class="form-group">
<label for="phone">Phone number *</label>
<input type="number" class="form-control"  name="phone" required>
<label for="Whatsapp">Whatsapp number *</label>
<input type="number" class="form-control"  name="Whatsapp" required>
</div>
<div class="form-group">
<label for="price">Location *</label>
<input type="text" class="form-control"  name="location" required>
</div>
<div class="form-group">
<label for="exampleFormControlTextarea1">Describe your product :</label>
<textarea class="form-control"  rows="3" name="textarea"></textarea>
</div>


<button type="submit" class="btn btn-primary">Submit</button>
</form>


</section>


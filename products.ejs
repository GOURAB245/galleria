<%- include('partials/header') %>
<section id="navigation" >
  <nav class="navbar navbar-expand-lg navbar-dark py-1">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
</button>

<div class="collapse navbar-collapse" id="navbarSupportedContent">

    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="btn btn-light" href="/submit">Sell</a>
          <a class="btn btn-light" href="/myAd">My profile </a>
      </li>



    </ul>
   </div>
  </nav>
</section>


<section id="products">


<div class="row">
<% newProducts.forEach(function(product){%>

<div class="col-lg-4 col-md-6 ">

<div class="card" style="width: 18rem">
    <% if(product.file){ %>
    <img class="card-img-top" src="./uploads/<%= product.file %>" alt="profile image" width="80">
    <% } %>
<div class="card-body text-white bg-dark">
  <h5 class="card-title"><%= product.gadget   %> / <%= product.brand %></h5>
  <p class="card-text">( <%=product.old %>  old )</p>
  <p class="card-text"> <%= product.textarea %></p>
</div>

<ul class="list-group list-group-flush ">
  <li class="list-group-item"> <i class="fa fa-money" aria-hidden="true"></i> Rs.<%= product.price %></li>
    <li class="list-group-item"><i class="fas fa-address-book" aria-hidden="true"></i><%= product.username %></li>
  <li class="list-group-item"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= product.location %></li>
  <li class="list-group-item"><i class="fa fa-whatsapp" aria-hidden="true"></i> <%= product.Whatsapp %></li>
  <li class="list-group-item"><i class="fa fa-phone" aria-hidden="true"></i><%= product.phone %></li>

</ul>


</div>
<br>
</div>

<%  }) %>
</div>



</section>



<%- include('partials/footer') %>

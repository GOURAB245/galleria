<%- include('partials/header') %>
<section id="navigation" >
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark  align_h" >
        <a class="navbar-brand" href="#">My Products</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">


           </div>
    </nav>
</section>

<section id="products" >

<div class="row">
<% my.forEach(function(product){%>

<div class="col-lg-4 col-md-6 ">

<div class="card" style="width: 18rem">
    <% if(product.file){ %>
    <img class="card-img-top" src="./uploads/<%= product.file %>" alt="profile image" width="80">
    <% } %>
<div class="card-body text-white bg-dark">
  <h5 class="card-title"><%= product.gadget   %> / <%= product.brand %></h5>
  <p class="card-text">( <%=product.old %> months old )</p>
  <p class="card-text"> <%= product.textarea %></p>
</div>

<ul class="list-group list-group-flush">
  <li class="list-group-item"> <i class="fa fa-money" aria-hidden="true"></i> Rs.<%= product.price %></li>
  <li class="list-group-item"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= product.location %></li>
  <li class="list-group-item"><i class="fa fa-whatsapp" aria-hidden="true"></i> <%= product.Whatsapp %></li>
  <li class="list-group-item"><i class="fa fa-phone" aria-hidden="true"></i><%= product.phone %></li>

</ul>
<form class="" action="/delete" method="post">
      <div class="item">

         <input type="hidden" id="custId" name="del" value="<%= product._id %>">
         <input type="button" class="btn-primary" onClick="this.form.submit()" value="Delete" >
      </div>
</form>
</div>
<br>
</div>

<%  }) %>
</div>



</section>

<%- include('partials/footer') %>
